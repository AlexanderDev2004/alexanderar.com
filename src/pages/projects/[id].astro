---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const projectEntries = await getCollection('projects');
  return projectEntries.map((entry) => ({
    params: { id: entry.slug },
  }));
}

const projectEntries = await getCollection('projects');
const project = projectEntries.find((entry) => entry.slug === Astro.params.id);

if (!project) {
  throw new Error(`Project not found: ${Astro.params.id}`);
}

const { Content } = await project.render();
---

<Layout>
  <div class="container mx-auto px-6 py-8 max-w-4xl">
    <!-- Back Button -->
    <a 
      href="/"
      class="inline-flex items-center gap-2 text-blue-600 dark:text-blue-400 hover:underline mb-6"
      style="font-family: 'Plus Jakarta Sans', sans-serif;"
    >
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      Back
    </a>

    <!-- Project Header -->
    <div class="mb-10">
      <div class="flex items-baseline gap-3 mb-4 flex-wrap">
        <h1 
          class="font-bold text-blue-600 dark:text-blue-400"
          style="font-family: 'Plus Jakarta Sans', sans-serif; font-weight: 700; font-size: 2.25rem;"
        >
          {project.data.title}
        </h1>
        <span class="text-sm font-semibold px-3 py-1 border border-gray-400 dark:border-gray-600 rounded">
          {project.data.year}
        </span>
      </div>
      <p class="text-gray-600 dark:text-gray-400" style="font-size: 1.125rem; line-height: 1.75;">
        {project.data.fullDescription}
      </p>
    </div>

    <!-- Project Image -->
    {project.data.image && (
      <div class="mb-10">
        <img 
          src={project.data.image} 
          alt={project.data.title}
          class="w-full rounded-lg border border-gray-300 dark:border-gray-700"
        />
      </div>
    )}

    <!-- Links -->
    <div class="flex gap-3 mb-10 flex-wrap">
      {project.data.projectLink && (
        <a 
            href={project.data.projectLink}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-4 py-2 border border-blue-500 text-blue-600 dark:text-blue-400 dark:border-blue-400 rounded hover:bg-blue-50 dark:hover:bg-blue-900/20 transition-colors font-medium"
        >
          <span>View Project</span>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
          </svg>
        </a>
      )}

      {project.data.repoLink && (
        <a 
            href={project.data.repoLink}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-4 py-2 border border-gray-400 dark:border-gray-600 text-gray-700 dark:text-gray-300 rounded hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors font-medium"
        >
          <span>View Repository</span>
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v 3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
          </svg>
        </a>
      )}
    </div>

    <!-- Tech Stack -->
    {project.data.technologies && project.data.technologies.length > 0 && (
      <div class="mb-10">
        <h2 
          class="font-bold mb-4 text-gray-900 dark:text-gray-100"
          style="font-family: 'Plus Jakarta Sans', sans-serif; font-weight: 700; font-size: 1.875rem;"
        >
          Tech Stack
        </h2>
        <div class="flex flex-wrap gap-3">
          {project.data.technologies.map((tech) => (
            <a
              href={tech.docLink}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 px-4 py-3 border border-gray-400 dark:border-gray-600 rounded hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors"
              title={`Learn more about ${tech.name}`}
            >
              <iconify-icon icon={tech.icon} width="24" height="24"></iconify-icon>
              <span class="font-medium text-gray-700 dark:text-gray-300">{tech.name}</span>
            </a>
          ))}
        </div>
      </div>
    )}

    <!-- Detailed Content -->
    <div class="prose dark:prose-invert max-w-none">
      <Content />
    </div>
  </div>
</Layout>

<style>
  :global(.prose h2) {
    font-size: 1.875rem;
    font-weight: 700;
    margin-top: 2rem;
    margin-bottom: 1rem;
    font-family: 'Plus Jakarta Sans', sans-serif;
  }

  :global(.prose h3) {
    font-size: 1.25rem;
    font-weight: 700;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
    font-family: 'Plus Jakarta Sans', sans-serif;
  }

  :global(.prose p) {
    line-height: 1.625;
    margin-bottom: 1rem;
  }

  :global(.prose ul) {
    list-style-type: disc;
    list-style-position: inside;
    margin-bottom: 1rem;
  }

  :global(.prose li) {
    margin-top: 0.5rem;
  }

  :global(.prose strong) {
    font-weight: 700;
  }
</style>
